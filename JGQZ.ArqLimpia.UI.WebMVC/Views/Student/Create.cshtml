@model JGQZ.ArqLimpia.BL.DTOs.StudentDTOs.StudentAddDTO

@{
    ViewData["Title"] = "Crear registro";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 text-center p-2">
                <p class="fs-1" style="color:#015668">¿Deseas registrar un nuevo alumno?</p>
                <p class="fs-4">Llena los campos con datos correctos del alumno</p>
            </div>
            <form asp-action="Create" class="col-md-6 offset-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group p-2">
                    <label asp-for="Name" class="ccontrol-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group p-2">
                    <label asp-for="YearsOld" class="control-label"></label>
                    <input asp-for="YearsOld" class="form-control" />
                    <span asp-validation-for="YearsOld" class="text-danger"></span>
                </div>
                <div class="form-group p-2">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group p-2">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group p-2">
                    <label asp-for="Number" class="control-label"></label>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group p-2">
                    <label asp-for="SecondNumber" class="control-label"></label>
                    <input asp-for="SecondNumber" class="form-control" />
                    <span asp-validation-for="SecondNumber" class="text-danger"></span>
                </div>

                <div class="form-group offset-md-3 p-2">
                    <input type="submit" value="Guardar" class="btn text-light" style="background-color: #015668" />
                    <a class="btn btn-outline-dark" asp-action="Index">Cancelar</a><br />
                    <span style="color:red">@ViewBag.ErrorMessage</span>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}